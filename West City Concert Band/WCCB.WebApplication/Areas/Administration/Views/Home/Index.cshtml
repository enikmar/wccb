@{
    ViewBag.Title = "Administration Area";
}

@(Html.Kendo().TabStrip()
    .Name("tabstrip")
    .Animation(false)
    .Items(tab =>
        {
            tab.Add().Text("Users")
               .Selected(true)
               .Content(@<text>
                             @Html.Partial("~/Areas/Administration/Views/User/Index.cshtml")
                         </text>);
    
            tab.Add().Text("Roles")

               .Content(@<text>
                             @Html.Partial("~/Areas/Administration/Views/Role/Index.cshtml")
                         </text>);

        })
)