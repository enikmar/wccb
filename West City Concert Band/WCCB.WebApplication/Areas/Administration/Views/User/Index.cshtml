@{
    ViewBag.Title = "Users";
}

@(Html.Kendo().Grid<UserGridModel>()
    .Name("grid-users")
    .DataSource(ds => ds
        .Ajax()
        .Model(m =>
                   {
                       m.Id(u => u.UserId);
                   })
        .Read("GetUsers", "User", new { @area = "Administration" })
        
        )
        .Pageable()
    .ToolBar(tbar =>
                 {
                     tbar.Template(@<text>
                                        @Html.ActionLink("Create New", "Create", "User", null, new { @class = "k-button" })
                                    </text>);
                 })
    .Columns(col =>
        {
            col.Bound(u => u.Name);
            col.Bound(u => u.Username);
            col.Bound(u => u.Roles).ClientTemplate("#=Roles#");
            
        })
    
      )
